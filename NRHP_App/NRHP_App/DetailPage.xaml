<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NRHP_App.DetailPage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="WidthRequest" Value="50"/>
            <Setter Property="Margin" Value="5, 10, 5, 10"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="White">
            <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0, 1, 0.5" AbsoluteLayout.LayoutFlags="All">
                <Grid AbsoluteLayout.LayoutBounds="0, 1, 0.5, 0.6" AbsoluteLayout.LayoutFlags="All">
                    <Image Source="photoicon.png" Grid.Row="0"/>
                    <Label x:Name="photosLabel" Text="Photos" HorizontalOptions="Center" Grid.Row="1"/>
                </Grid>
                <BoxView Color="Black" AbsoluteLayout.LayoutBounds="0.5, 0.5, 2, 1" AbsoluteLayout.LayoutFlags="PositionProportional, HeightProportional"/>
                <Grid AbsoluteLayout.LayoutBounds="1, 1, 0.5, 0.6" AbsoluteLayout.LayoutFlags="All">
                    <Image Source="docicon.png" Grid.Row="0"/>
                    <Label x:Name="docsLabel" Text="Documents" HorizontalOptions="Center" Grid.Row="1"/>
                </Grid>
            </AbsoluteLayout>
            <StackLayout BackgroundColor="#2699FB" Spacing="0" Orientation="Horizontal" AbsoluteLayout.LayoutBounds="0.5, 0, 1, 61" AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional">
                <Button x:Name="backButton" Text="BB" Margin="3, 3" HorizontalOptions="Start" VerticalOptions="Center" Clicked="BackButton"/>
            </StackLayout>
            <StackLayout Spacing="0" AbsoluteLayout.LayoutBounds="0.5, 1, 1, 0.5" AbsoluteLayout.LayoutFlags="All" VerticalOptions="FillAndExpand">
                <StackLayout Spacing="0" Padding="15, 0" VerticalOptions="Start">
                    <BoxView Color="Black" WidthRequest="1" HeightRequest="2"/>
                    <Label x:Name="name" FontAttributes="Bold"/>
                    <Label x:Name="category"/>
                    <Label x:Name="sourceDate"/>
                    <Label x:Name="address"/>
                    <Label x:Name="cityState"/>
                    <Label x:Name="county"/>
                    <Label x:Name="people"/>
                </StackLayout>
                <StackLayout Spacing="0" BackgroundColor="#2699FB" Orientation="Horizontal" VerticalOptions="EndAndExpand">
                    <Button x:Name="legendOverlayButton" Text="LB"/>
                    <Button x:Name="favoritesPageButton" Text="FB"/>
                    <Button x:Name="detailPageButton" Text="DB"/>
                    <Button x:Name="otherButton" Text="OB"/>
                    <Button x:Name="settingsPageButton" Text="SB"/>
                </StackLayout>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>