<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NRHP_App.FavoritesPage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="WidthRequest" Value="50"/>
            <Setter Property="Margin" Value="5, 10, 5, 10"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Spacing="0" BackgroundColor="#2699FB">
            <StackLayout Spacing="0" Margin="3, 3" BackgroundColor="White">
                <SearchBar x:Name="searchBar" Placeholder="Search" HeightRequest="55"/>
            </StackLayout>
            <StackLayout Spacing="0" BackgroundColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <ListView x:Name="favoritesListView" ItemsSource="{Binding favoritePoints}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label Text="{Binding Name}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Label Text="You have no favorites right now. Go back to the map and find a building you LOVE!" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" IsVisible="False"/>
            </StackLayout>
            <StackLayout Spacing="0" Orientation="Horizontal">
                <Button x:Name="legendOverlayButton" Text="LB" IsEnabled="False"/>
                <Button x:Name="favoritesPageButton" Text="FB" IsEnabled="False"/>
                <Button x:Name="detailPageButton" Text="DB" IsEnabled="False"/>
                <Button x:Name="otherButton" Text="OB"/>
                <Button x:Name="settingsPageButton" Text="SB"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>