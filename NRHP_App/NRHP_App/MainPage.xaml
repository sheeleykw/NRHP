<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NRHP_App"
             x:Class="NRHP_App.MainPage">
    <ContentPage.Content>
        <StackLayout Spacing="0" BackgroundColor="#2699FB">
            <local:NRHPMap x:Name="map" MapType="Street"/>
            <StackLayout Spacing="0" Orientation="Horizontal">
                <StackLayout.Resources>
                    <ResourceDictionary>
                        <Style TargetType="Button">
                            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
                            <Setter Property="HeightRequest" Value="50"/>
                            <Setter Property="WidthRequest" Value="50"/>
                            <Setter Property="Margin" Value="5, 10, 5, 10"/>
                            <Setter Property="BackgroundColor" Value="Black"/>
                            <Setter Property="TextColor" Value="White"/>
                        </Style>
                    </ResourceDictionary>
                </StackLayout.Resources>    
                <Button x:Name="legendOverlayButton" Text="LB"/>
                <Button x:Name="favoritesPageButton" Text="FB" Clicked="OpenFavoritesPage"/>
                <Button x:Name="mainPageButton" Text="MP" IsEnabled="False"/>
                <Button x:Name="detailPageButton" Text="DB" Clicked="OpenDetailPage" IsEnabled="False"/>
                <Button x:Name="settingsPageButton" Text="SB"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
