<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NRHP_App"
             x:Class="NRHP_App.MainPage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="WidthRequest" Value="50"/>
            <Setter Property="Margin" Value="5, 0, 5, 8"/>
        </Style>
    </ContentPage.Resources>
    <StackLayout>
        <SearchBar x:Name="searchBar"/>
        <local:NRHPMap x:Name="map" MapType="Street"/>
        <StackLayout Orientation="Horizontal" BackgroundColor="Black">
            <Button x:Name="Favorites"/>
            <Button x:Name="detailPageButton" Text="DP" Clicked="OpenDetailPage" IsEnabled="False"/>
            <Button x:Name="Something2" Text="SB"/>
            <Button x:Name="Something3"/>
            <Button x:Name="Something4"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
