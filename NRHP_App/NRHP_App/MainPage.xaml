<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NRHP_App"
             x:Class="NRHP_App.MainPage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="WidthRequest" Value="50"/>
            <Setter Property="Margin" Value="5, 10, 5, 10"/>
        </Style>
    </ContentPage.Resources>
    <StackLayout Spacing="0" BackgroundColor="#2699FB">
        <StackLayout Margin="3, 3" BackgroundColor="White">
            <SearchBar x:Name="searchBar" Placeholder="Search" HeightRequest="55"/>
        </StackLayout>
        <local:NRHPMap x:Name="map" MapType="Street"/>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="legendOverlayButton" Text="LB"/>
            <Button x:Name="favoritesPageButton" Text="FB"/>
            <Button x:Name="detailPageButton" Text="DB" Clicked="OpenDetailPage" IsEnabled="False"/>
            <Button x:Name="otherButton" Text="OB"/>
            <Button x:Name="settingsPageButton" Text="SB"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
